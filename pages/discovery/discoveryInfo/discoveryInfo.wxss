/* pages/discovery/disconveryInfo/discoveryInfo.wxss */
page {
    background-color: #f2f3f5;
}

.product-img {
    width: 100%;
    height: 750rpx;
    display: block;
}

.product-info {
    display: flex;
    flex-direction: column;
    padding: 30rpx 20rpx;
    background-color: #fff;
    
}
.inventory {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    line-height: 80rpx;
    color: #969799;
    margin: 20rpx 0;
    background-color: #fff;
    padding: 0 30rpx;
}

.product-bottom {
    height: 100rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
}
.wrapper{
    background-color: #fff;
    height: 260rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    font-size: 46rpx;
    justify-content: space-between;
    line-height: 150rpx;
    box-sizing: border-box;
}
.count {
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    height: 150rpx;
}