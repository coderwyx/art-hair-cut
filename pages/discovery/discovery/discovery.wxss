/* pages/discovery/discovery.wxss */
page {
    background-color: #f2f3f5;

}

.product {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.product-item {
    width: 50%;
    padding: 10rpx;
    box-sizing: border-box;
    height: 460rpx;
    display: flex;
    /* margin: 20rpx 10rpx; */
    flex-direction: column;
    /* background-color: #fff; */
    overflow: hidden;
}

.product-img {
    width: 100%;
    height: 80%;
}

.product-item text {
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    background-color: #fff;
}
.product-item text:nth-child(3) {
    color: red;
    font-weight: bold;
    padding-bottom: 20rpx;
}
.nothing {
    font-weight: bold;
    text-align: center;
    height: 100rpx;
    margin: 80rpx;
}